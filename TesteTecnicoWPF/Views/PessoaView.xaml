<Window x:Class="TesteTecnicoWPF.Views.PessoaView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TesteTecnicoWPF.Views"
        xmlns:converters="clr-namespace:TesteTecnicoWPF.Converters" mc:Ignorable="d"
        Title="Cadastro de Pessoas" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:CpfMaskConverter x:Key="CpfMaskConverter"/>
        <converters:CepMaskConverter x:Key="CepMaskConverter"/>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.35*" />
            <ColumnDefinition Width="0.65*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,10,0">
            <Label Content="ID"/>
            <TextBox IsReadOnly="True" Text="{Binding PessoaEmEdicao.Id}"/>

            <Label Content="Nome*"/>
            <TextBox Text="{Binding PessoaEmEdicao.Nome, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="CPF*"/>
            <TextBox Text="{Binding PessoaEmEdicao.CPF, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CpfMaskConverter}}"/>

            <Label Content="CEP"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" Text="{Binding PessoaEmEdicao.CEP, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CepMaskConverter}}"/>
                <Button Grid.Column="1" Content="Buscar" Margin="5,0,0,0" Command="{Binding BuscarCepCommand}"/>
            </Grid>

            <Label Content="Logradouro"/>
            <TextBox Text="{Binding PessoaEmEdicao.Logradouro, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Número"/>
            <TextBox Text="{Binding PessoaEmEdicao.Numero, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Bairro"/>
            <TextBox Text="{Binding PessoaEmEdicao.Bairro, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Complemento"/>
            <TextBox Text="{Binding PessoaEmEdicao.Complemento, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Estado"/>
            <ComboBox ItemsSource="{Binding Estados}"
                      SelectedItem="{Binding EstadoSelecionado}"
                      DisplayMemberPath="Nome"
                      IsEditable="True"
                      IsTextSearchEnabled="True"/>
            
            <Label Content="Cidade"/>
            <ComboBox ItemsSource="{Binding Municipios}"
                      Text="{Binding PessoaEmEdicao.Cidade}"
                      DisplayMemberPath="Nome"
                      IsEditable="True"
                      IsTextSearchEnabled="True"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button Content="Novo" Width="80" Margin="0,0,5,0" Command="{Binding NovoCommand}"/>
                <Button Content="Salvar" Width="80" Margin="0,0,5,0" Command="{Binding SalvarCommand}"/>
                <Button Content="Excluir" Width="80" Command="{Binding ExcluirCommand}"/>
            </StackPanel>
        </StackPanel>


        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,0,0,5">
            <TextBlock Text="Filtrar por Nome:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Text="{Binding FiltroNome, UpdateSourceTrigger=PropertyChanged}" Width="150" Margin="0,0,10,0"/>
            <TextBlock Text="Filtrar por CPF:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Text="{Binding FiltroCPF, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
        </StackPanel>

        <DataGrid Grid.Column="1" Margin="0,30,0,0"
                  ItemsSource="{Binding PessoasView}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                <DataGridTextColumn Header="CPF" Binding="{Binding CPF, Converter={StaticResource CpfMaskConverter}}" Width="120"/>
                <DataGridTextColumn Header="Cidade" Binding="{Binding Cidade}" Width="150"/>
                <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="50"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>